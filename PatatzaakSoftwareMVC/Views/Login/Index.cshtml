@model PatatzaakSoftwareMVC.Models.User
@using Microsoft.AspNetCore.Http
@{
	ViewData["Title"] = "Login";
    var errorMessage = ViewBag.ErrorMessage as string;
    var Message = ViewBag.Message as string;
}



<body>
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            @errorMessage
        </div>
    }
    <div>
        <h3 class="text-center">Log into your account</h3>
        <hr />
    </div>
    
    <div class="container-sm homemessage">
        <form asp-action="Login" method="post">
 
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control bg-dark text-white" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control bg-dark text-white" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button style="margin-top:5px"type="submit" class="btn btn-primary">Login</button>

           
        </form>
        <a class="btn" asp-controller="Register" asp-action="Index">Register</a>
    </div>
</body>
