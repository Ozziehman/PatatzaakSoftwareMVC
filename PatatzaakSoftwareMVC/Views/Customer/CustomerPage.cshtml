@using PatatzaakSoftwareMVC.Models.ViewModels
@model CustomerPageViewModel
@{

    var sessionOrder = Model.CreateOrderObject(); /*  this order object will have its Id passed to JS returning in the Controller with AJAX, then the controller will add the items to that orderId */
}                                                                                                           
<html>                                                                                                      
<body>
    <div class="container-fluid vh-100">
        <div class="row">
            <div class="col-md-8">
                <div class="container-fluid border-sect vh-100" id="menuColumn">
                    <!--menu part-->
                    @if (ViewBag.Items != null && ViewBag.Items.Count > 0)
                    {
                        @foreach (var item in ViewBag.Items)
                        {
                            <div class="col-md-3 text-center itemCol p-5" style="display: inline-block;">
                                <img id="itemImage" src="@item.ImagePath" class="mw-100 h-auto">                   
                                <div class="btn" onclick="addToReceipt('@item.Name', '@item.Price', '@item.Id', '@sessionOrder.Id');">@item.Name - $@item.Price</div>
                            </div>
                        }
                    }
                    else
                    {
                        <div>
                            <label>Geen items gevonden</label>
                        </div>
                    }
                </div>
            </div>
            <!--receipt part-->
            <div class="col-md-4 receiptPart">
                <div id="receipt" class="container-fluid border-sect">
                    <span id="dummySpan">nog geen items in bestelling</span>
                </div>
                <div class="col">
                    <div class="btn" onclick="PlaceOrderButtonClicked('@sessionOrder.Id');">Place Order</div>
                </div>
                <div class="container-fluid p-5 text-center">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="~/Resources/Images/Checkmark.png" class="mw-100 h-auto">
                        </div>
                        <div class="col-md-9">
                            <p>Bestelling is geplaatst</p>
                            <p1>Nummer: </p1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
