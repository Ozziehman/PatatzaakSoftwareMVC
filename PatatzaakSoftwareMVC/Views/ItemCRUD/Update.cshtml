@model PatatzaakSoftwareMVC.Models.Item;

@* Edit Item (UPDATE) *@
<div class="row justify-content-center align-items-center p-1">
    <form method="post" action="/Item/ProcessEditForm">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" id="editId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" id="editName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" id="editPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Discount"></label>
            <input asp-for="Discount" class="form-control" />
            <span asp-validation-for="Discount" id="editDiscount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="color: black">Update</button>
    </form>
</div>
